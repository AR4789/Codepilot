# Server Environment Configuration Template
# Copy this file to .env and update the values for your deployment

# Application URLs (REQUIRED for production)
APP_SERVER_URL=http://localhost:5000
APP_CLIENT_URL=http://localhost:3000

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=5000

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=codepilot

# JWT Configuration (IMPORTANT: Change JWT_SECRET for production)
JWT_SECRET=codepilotSecretKeyForJWTTokenGeneration2024
JWT_EXPIRATION_MS=86400000

# OAuth Configuration (REQUIRED)
# Google OAuth - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Payment Configuration (Optional)
RAZORPAY_KEY_ID=rzp_test_dummy
RAZORPAY_KEY_SECRET=dummy_secret

# Logging Configuration (Optional)
LOGGING_LEVEL_COM_EXAMPLE_CODEPILOT=INFO
